<a class="btn btn-primary" href="<%= new_user_path %>">Add New User</a>

<table class="table table-bordered">
  <thead class="bg-info">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Password</th>
      <th>Is Admin?</th>
      <th colspan="2">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td>
        <a class="btn btn-info" href="<%= user_path(user.id) %>"><%=user.name%></a>
      </td>
      <td>
        <%=user.email%>
      </td>
      <td>
        <%=user.password_digest%>
      </td>
      <td>
        <%=user.is_admin%>
      </td>
      <td>
        <a class="btn btn-warning" href="<%=edit_user_path(user.id)%>">Edit</a>
      </td>
      <td>
        <%= button_to 'Destroy',
            user,
            method: :delete,
            class: 'btn btn-danger',
            data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
  </tbody>
  <%end%>
</table>